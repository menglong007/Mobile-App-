<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/onForm"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:contentDescription="Back"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/onPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="end"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <EditText
            android:maxLength="120"
            android:id="@+id/titleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="22sp"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:maxLines="3"
            android:ems="10"
            android:ellipsize="end" />

        <EditText
            android:id="@+id/contentInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter text using style markdown"
            android:textSize="17sp"
            android:padding="8dp"
            android:ems="10"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:inputType="textMultiLine|textCapSentences|textNoSuggestions" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|bottom"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:weightSum="5"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:layout_marginEnd="4dp"
            android:text="B"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/onHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:layout_marginEnd="4dp"
            android:text="H"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/italics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:layout_marginEnd="4dp"
            android:text="I"
            android:textSize="22sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/addBulleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_format_list_bulleted_add_24"/>

        <ImageView
            android:id="@+id/onCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_code_24"/>

        <ImageView
            android:id="@+id/noFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_layers_clear_24" />
    </LinearLayout>
</LinearLayout>
